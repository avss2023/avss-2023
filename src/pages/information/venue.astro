---
import { Picture } from "@astrojs/image/components";
import Layout from "../../layouts/Layout.astro";
import MainHeader from "../../components/Tags/MainHeader.astro";
import Heading3 from "../../components/Tags/Heading3.astro";
import Heading4 from "../../components/Tags/Heading4.astro";
import Paragraph from "../../components/Tags/Paragraph.astro";
import Section from "../../components/Tags/Section.astro";
---

<Layout
  title="Information :: AVSS2023"
  meta="Information about the venue. AVSS 2023 will be taking place at the Daegu Exhibition & Convention Center (EXCO) in Daegu, South Korea."
>
  <MainHeader metaTitle="Information" title="Venue" />
  <Section>
    <Paragraph>
      AVSS 2023 will be taking place from 7 - 9 November 2023 at the Daegu
      Exhibition & Convention Center (EXCO) in Daegu, South Korea.
    </Paragraph>

    <Heading3 title="Exco">
      Daegu Exhibition & Convention Center (EXCO)
    </Heading3>
    <Picture
      src="/exco.jpeg"
      alt="EXCO"
      aspectRatio={1200 / 645}
      widths={[200, 400, 800]}
      sizes="100vw"
      class="mt-4"
    />

    <Heading4 title="Exco Address">Address</Heading4>
    <p>10, Exco-ro, Buk-gu, Daegu 41515</p>

    <Heading4 title="Exco Number">Tel</Heading4>
    <p>+82-53-601-5000</p>
    <Paragraph>
      <a
        href="https://www.exco.co.kr/en/sub03/sub012.asp"
        target="_blank"
        rel="noopener noreferrer"
        class="fancy">Click Here</a
      >
      for more information on the venue.
    </Paragraph>

    <article
      class="mt-8 mb-4 w-full overflow-hidden rounded-lg border-2 border-gray-300"
    >
      <iframe
        width="100%"
        height="400"
        frameborder="0"
        scrolling="no"
        marginheight="0"
        marginwidth="0"
        src="https://www.openstreetmap.org/export/embed.html?bbox=128.60788822174075%2C35.902851781956706%2C128.61850976943973%2C35.910594630476204&layer=mapnik&marker=35.90672330091915%2C128.6131989955902"
      ></iframe>
    </article>
  </Section>
</Layout>
