---
import { Image } from "@astrojs/image/components";
import DefaultImage from "./DefaultImage.astro";

const { imageSrc, altText } = Astro.props;
---

{
  imageSrc ? (
    <Image
      src={imageSrc}
      alt={altText}
      class="aspect-square w-full object-cover"
      width={150}
      aspectRatio="1/1"
      format="webp"
    />
  ) : (
    <DefaultImage />
  )
}
