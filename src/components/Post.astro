---
import type { Post } from "../pages/general/news.astro";
import Heading3 from "./Tags/Heading3.astro";
import Paragraph from "./Tags/Paragraph.astro";

const { title, date, content, links, important } = Astro.props as Post;
---

<div class={"px-4 -mx-2 pb-9 pt-1 rounded" + (important ? " bg-gray-300" : "")}>
  <Heading3 title={title} />
  <p class="-mb-2 text-neutral-400">{date}</p>
  <Paragraph>{content}</Paragraph>
  {
    links && (
      <div class="mt-6 flex flex-wrap gap-4">
        {links?.map(({ text, link }) => {
          return (
            <a
              href={link}
              class="rounded border-0 border-pink-500 bg-pink-100 px-4 py-2 text-xl font-semibold text-pink-900 transition-colors hover:bg-pink-200"
            >
              {text}
            </a>
          );
        })}
      </div>
    )
  }
</div>
