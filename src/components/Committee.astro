---
import committee from "./Profile/profiles";
import Profiles from "./Profile/Profiles.astro";
import lowerCastify from "../utils/lowerCasify";
---

{
  committee.map((chair) => {
    return (
      <>
        <h3
          class="mx-auto mt-6 mb-4 max-w-4xl text-3xl font-bold sm:mt-8 sm:text-3xl"
          id={lowerCastify(chair.roll)}
        >
          {chair.roll}
        </h3>
        <Profiles {...chair} />
      </>
    );
  })
}
