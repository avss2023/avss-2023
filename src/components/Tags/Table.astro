---
export interface Row {
  items: string[];
  title?: boolean;
  bold?: boolean;
}
interface Props {
  rows: Row[];
}
const { rows } = Astro.props as Props;
---

<figure>
  <table class="mt-4 w-full max-w-2xl table-auto border-gray-800 text-xl">
    <tbody class="border-2 border-gray-800">
      {
        rows.map(({ items, title, bold }) => {
          return (
            <tr
              class={
                "border-y-2 border-gray-800" +
                (title
                  ? " bg-gray-600 font-bold text-gray-100"
                  : " odd:bg-gray-300") +
                  (bold ? " font-bold" : "")
              }
            >
              {items.map((item) => {
                return (
                  <td class="border-x-2 border-gray-800 px-4 py-4 text-center">
                    {item}
                  </td>
                );
              })}
            </tr>
          );
        })
      }
    </tbody>
  </table>
</figure>
