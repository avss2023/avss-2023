---
import { GoogleAnalytics } from "astro-google-analytics";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <html lang="en">
    <head>
      <meta charset="UTF-8" />
      <meta name="viewport" content="width=device-width" />
      <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
      <GoogleAnalytics id="G-L93RZNFRF1" />
      <meta name="generator" content={Astro.generator} />
      <title>{title}</title>
    </head>
    <body class="relative bg-gray-100">
      <header
        class="fixed right-0 top-0 left-0 z-20 flex flex-row items-center bg-gradient-to-b from-neutral-800/90 via-neutral-900/70 to-transparent"
      >
        <Header />
      </header>
      <section class="relative">
        <Hero />
      </section>
      <main
        class="isolate z-0 mx-auto mt-6 min-h-[300px] bg-gray-100/50 px-6 py-12 sm:px-6"
      >
        <slot />
      </main>
      <Footer />
    </body>
    <style is:global>
      *,
      *::before,
      *::after {
        @apply m-0 box-border p-0;
      }
      html {
        scroll-behavior: smooth;
        scroll-padding-top: 200px;
      }

      :target {
        outline: red solid 5px;
        outline-offset: 5px;
      }

      main {
        @apply min-h-full w-full bg-gray-100 text-gray-900;
        /* background-image: radial-gradient(rgba(55, 55, 55, 0.2) 9%, transparent 9%);
    background-position: 0% 0%;
    background-size: 2rem 2rem;
    position: absolute;
    left: 0px;
    top: 0px; */
      }
    </style>
  </html>
</html>
