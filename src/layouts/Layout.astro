---
import { GoogleAnalytics } from "astro-google-analytics";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <html lang="en">
    <head>
      <meta charset="UTF-8" />
      <meta name="viewport" content="width=device-width" />
      <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
      <GoogleAnalytics id="G-L93RZNFRF1" />
      <meta name="generator" content={Astro.generator} />
      <title>{title}</title>
    </head>
    <body class="bg-netural-100 relative bg-neutral-100">
      <header
        class="slate-100/50 fixed right-0 top-0 left-0 z-10 flex flex-row items-center bg-gradient-to-b from-neutral-100 via-neutral-100/80 to-transparent px-10 py-4"
      >
        <a href="#article" class="sr-only focus:not-sr-only"
          ><span
            class="absolute top-5 left-5 right-5 flex justify-center rounded-lg bg-yellow-400 py-4 text-4xl text-neutral-900"
            >Skip to content</span
          >
        </a>
        <nav class="flex w-full flex-col lg:flex-row">
          <div
            class="w-20 flex-shrink-0 rounded-lg p-2 outline-neutral-200 transition-shadow duration-300 ease-in-out hover:shadow-lg hover:outline"
          >
            <a href="/">
              <img src="/logo.png" />
            </a>
          </div>
          <ul
            class="hidden grow flex-col items-center justify-end gap-6 font-bold text-primary lg:flex lg:flex-row"
          >
            <li>News</li>
            <li>Organization</li>
            <li>Program</li>
            <li>Calls</li>
            <li>Submission</li>
            <li>Information</li>
            <li>Attend</li>
            <li>Sponsors</li>
            <li>Contact</li>
          </ul>
        </nav>
      </header>

      <main>
        <section class="relative">
          <img
            src="/hero.png"
            alt="Photo of Daegu in Red"
            class="h-[55vh] max-h-[550px] w-full object-cover"
          />
          <img
            src="/hero-logo.png"
            alt="logo of AVSS 2023 daegu"
            class="absolute left-0 right-0 bottom-6 mx-auto my-auto h-2/3 w-2/3 object-contain"
          />
        </section>
        <slot />
      </main>

      <footer
        class="relative z-10 bg-neutral-800 px-6 py-8 text-sm text-neutral-100"
      >
        <div class="mx-auto grid max-w-5xl grid-cols-1 gap-4 md:grid-cols-2">
          <section class="flex flex-row flex-wrap gap-4 font-semibold">
            <a class="text-primary">Privacy Policy</a>
            <a>Cookie Policy</a>
            <a>Email</a>
            <a>Contact Us</a>
          </section>
          <section class="flex flex-row items-center gap-6 md:justify-end">
            <span class="font-semibold">Sponsors</span>
            <img src="etri.png" alt="etri logo" class="h-4" />
            <img src="knu.png" alt="knu logo" class="h-5" />
            <img src="daegu.png" alt="daegu logo" class="h-5" />
          </section>
          <section class="flex flex-row flex-wrap gap-2 md:col-span-2">
            <span>Address | 대구 동구 송라로16길 61 신천3동 30-7</span>
            <span>Tel | 053-382-4288</span>
            <span>Fax | 053-382-4286</span>
          </section>
          <span class="block text-neutral-600"
            >COPYRIGHT © AVSS 2023. All Rights Reserved</span
          >
        </div>
      </footer>
    </body>
    <style is:global>
      *,
      *::before,
      *::after {
        @apply m-0 box-border p-0;
        @apply m-0 box-border p-0;
      }
      html {
        @apply scroll-smooth font-sans;
        @apply scroll-smooth font-sans;
      }

      main {
        @apply min-h-full w-full bg-neutral-100 text-neutral-900;
        /* background-image: radial-gradient(rgba(55, 55, 55, 0.2) 9%, transparent 9%);
    background-position: 0% 0%;
    background-size: 2rem 2rem;
    position: absolute;
    left: 0px;
    top: 0px; */
      }
    </style>
  </html>
</html>
